{
  "grammarly.overrides": [
    {
      "files": [
        "**/packages/client/customize.json"
      ],
      "config": {
        "audience": "general",
        "dialect": "british",
        "domain": "general",
        "emotions": [
          "neutral"
        ],
        "goals": [
          "inform"
        ]
      }
    }
  ],
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "typescript.tsc.autoDetect": "off",
  "npm.autoDetect": "off",
  "debug.allowBreakpointsEverywhere": true,
  "html.autoClosingTags": false
}
